<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ProfileActivity"
    android:background="@drawable/bg_login"
    android:layout_gravity="center_vertical"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/bgapp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="-2dp"
        android:layout_marginRight="-2dp"
        android:scaleType="fitXY"
        android:src="@drawable/background"
        android:translationY="-450dp"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/bgapp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
        android:layout_marginBottom="60dp"
        android:fontFamily="@font/crushed"
        android:text="Dados Pessoais"
        android:textColor="#FFDDE8"
        android:gravity="center_horizontal"
        android:textSize="65dp" />

    <EditText
        android:id="@+id/nome_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/telefone_edit_text"
        android:layout_marginBottom="11dp"
        android:ems="10"
        android:hint="Nome"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"/>

    <EditText
        android:id="@+id/telefone_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/Button_prosseguir"
        android:layout_marginBottom="42dp"
        android:ems="10"
        android:hint="Telefone"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"/>

    <Button
        android:id="@+id/Button_prosseguir"
        android:layout_width="165dp"
        android:layout_height="42dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="134dp"
        android:background="@drawable/btn_login"
        android:text="ENTRAR"
        android:textColor="#FFF"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"/>
</RelativeLayout>