<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bg_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".IndexActivity"
    android:layout_gravity="center_vertical"
    android:gravity="center_vertical">

    <ImageView

        android:id="@+id/bgapp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/background"
        android:translationY="-3dp"
        android:layout_marginBottom="-100dp"/>

    <Button
        android:id="@+id/btnCad"
        android:layout_width="181dp"
        android:layout_height="55dp"
        android:layout_above="@+id/tvEntrar"
        android:layout_alignEnd="@+id/bgapp"
        android:layout_marginBottom="14dp"
        android:background="@drawable/botao_customizado"
        android:fontFamily="@font/comfortaa_bold"
        android:onClick="btnCadastrar"
        android:text="Cadastre-se"
        android:textColor="#CD5C5C"
        android:textSize="20dp"
        android:layout_centerInParent="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="60dp"/>

    <TextView
        android:id="@+id/tvEntrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/bgapp"
        android:layout_alignBottom="@+id/bgapp"
        android:layout_marginBottom="162dp"
        android:fontFamily="@font/comfortaa_bold"
        android:onClick="btnEntrar"
        android:text="Já tem conta? Faça o login."
        android:textColor="#CDB5CD"
        android:textSize="18dp"
        android:layout_centerInParent="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:gravity="center"/>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="261dp"
        android:layout_height="204dp"
        android:layout_alignEnd="@+id/bgapp"
        android:layout_alignBottom="@+id/bgapp"
        android:layout_alignParentStart="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="75dp"
        android:layout_marginEnd="75dp"
        android:layout_marginBottom="349dp"
        android:src="@drawable/logo" />

</RelativeLayout>